{
   "compilerOptions": {
      "target": "es6",
      "module": "esnext",
      "jsx": "react",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "noEmit": true,
      "moduleResolution": "node",
      "baseUrl": "./src",
      "paths": {
         "*": ["src/*"]
      },
      "typeRoots": ["./node_modules/@types"]
   },
   "include": ["src/**/*.tsx", "src/**/*.ts"]
}
